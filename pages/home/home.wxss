/* pages/home/home.wxss */
.container_ScrollView{
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100vh;
}
/*轮播图  */
swiper{
  width: 100%;
  height: 428rpx;
}
swiper image{
  width: 100%;
  height: 428rpx;
}
.bannerView{
  width: 100%;
	height: 428rpx;
}
/*奖杯数据*/
.section_championInfo{
 display: flex;
 flex-direction: row;
 background-color: white;
 width: 100%;
 height: 157rpx;

}
.section_championInfo_item{
display: flex;
flex-direction: column;
justify-content: center; /*子元素在主轴（横轴）的对齐方式;*/
align-items: center; /*子元素在垂直方向上（纵轴）的对齐方式*/
margin-right: 40rpx;
margin-left: 40rpx;
width: 223rpx;
}
.section_championInfo_item_title{
font-size: 12px;
color: #646464;
margin-bottom: 10rpx;
}
.section_championInfo_item_content{
 display: flex;
 flex-direction: row;
 align-items: baseline;
 font-weight: bold;
}

.container_news{
  margin-top: 10rpx;
display: flex;
flex-direction: column;
width: 100%;
margin-left: 10rpx;
margin-right: 10rpx;
background-color: white;
}
.news_data{
 display: flex;
 flex-direction: column;
 align-items: center;
 background-color: white;
 border: 2rpx solid #eee;
 box-shadow:0px 0px 2px 2px #eee; 
 border-radius: 10rpx;
 margin: 40rpx 50rpx 40rpx 50rpx;
 height: 850rpx;

}
.news_images{

width: 100%;
height: 400rpx;
}
.news_detail{
 /* background-color: orange; */
  line-height: 35rpx;
  height: 100rpx;
  width: 590rpx;
  text-align: justify;
  margin-top: 20rpx;
  /*margin-left: 30rpx;*//*margin-right: 30rpx;*/
  color: #333;
  font-size: 26rpx;
}
::-webkit-scrollbar{
width: 0;
height: 0;
color: transparent;
}

