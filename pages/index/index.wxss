/**index.wxss**/
.container{
  display: flex;
  flex-direction: column;
  background-color: white
}
.head_img{
width: 100%;
height: 320rpx;
-webkit-filter: blur(5px);
}
.head-imag-hover{
width: 100%;
height: 320rpx;
position: absolute;
top: 0;
left: 0;
display: flex;
flex-direction: column;
}
.main-title{
  font-size: 19px;
  color: #fff;
  font-weight: bold;
  margin-top: 50rpx;
  margin-left: 40rpx;
  letter-spacing: 2px;
}
.badge_img{
  height: 175rpx;
  width: 175rpx;
  position: absolute;
  top: 190rpx;
  right: 30rpx;
}
.player-container{

 margin-left: 40rpx;
 display: flex;
 flex-direction: column;
 margin-top: 30rpx;
}
.player-title{
 color: #999;
 margin-bottom: 30rpx;
}
.player-imgs{
  white-space: nowrap;
}
.cast-container{
  display: inline-flex;
  flex-direction: column;
  margin-right: 40rpx;
  width: 280rpx;
  text-align: center;
  white-space: normal;
}
.cast-img{
width: 280rpx;
height: 210rpx;
}
.cast-name{
margin: 10rpx auto 0;
word-break: break-all;
font-size: 13px;
}
::-webkit-scrollbar{
width: 0;
height: 0;
color: transparent;
}
.section_topView{
	margin-top: 40rpx;
	margin-left: 40rpx;
	width: 670rpx;
	height: 50rpx;
	align-items: center;
}
.section_topView_lineview{
	background-color: #f42c28;
	margin-right: 10rpx;
	width: 3px;
	height: 40rpx;
	float: left;
}
.section_topView_text{
font-size: 34rpx;
	color: #000000;
	float: left;
    line-height: 50rpx;
    height: 50rpx;
    text-align: center;
}
.section_case{
  display: flex;
  flex-direction: column;
  background-color: white;
  margin-top: 10rpx;
  width:100%;
}
.game_container{
  display: flex;
  flex-direction: column;
  width: 100%;
}
.game-content{
  align-items: center;
  display: flex;
  flex-direction: row;
  height: 250rpx;
  margin-top: 50rpx;
  border: 2rpx solid #eee;
  box-shadow:0px 0px 2px 2px #eee; 
  margin: 40rpx 50rpx 40rpx 50rpx;
}
.game-team{
  align-items: center;
  display: flex;
  flex-direction: column;
  width: 200rpx;
 
}

.game-image{
width: 80rpx;
height: 80rpx;
margin-bottom: 10rpx;
}
.game-font{
font-size: 10px;
}
.game-time{
  margin-right: 30rpx;
  margin-left: 30rpx;
align-items: center;
 display: flex;
 flex-direction: column;
}
.game-title{
  font-size: 15px;
margin-bottom: 10rpx;
}
.game-titletime{
  font-size: 13px;
margin-bottom: 10rpx;
}
.game-gameover{
  font-size: 18px;

}